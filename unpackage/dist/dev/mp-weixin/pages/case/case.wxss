.content {
  height: 100vh;
}
.head {
  width: 100%;
  padding: 30rpx 30rpx;
  font-size: 40rpx;
  font-weight: 600;
  box-sizing: border-box;
  box-shadow: 0 0 7px #999;
}
.head image {
  width: 5%;
  height: 50rpx;
  float: right;
  vertical-align: middle;
}
.body {
  margin-bottom: 220rpx;
  width: 100%;
}
.body ._ul {
  margin: 0;
  padding: 0;
  width: 100%;
  list-style: none;
}
.body ._ul ._li {
  width: 100%;
  height: 260rpx;
  padding: 30rpx;
  border: 1rpx solid #ccc;
  border-top: 0;
  box-sizing: border-box;
}
.body ._ul ._li .left {
  width: 45%;
  float: left;
}
.body ._ul ._li .left .left-right {
  width: 70%;
  height: 200rpx;
  padding-left: 30rpx;
}
.body ._ul ._li .left .left-right image {
  width: 100%;
  height: 100%;
}
.body ._ul ._li .right {
  float: left;
  width: 55%;
  height: 200rpx;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
}
.body ._ul ._li .right .title {
  width: 100%;
  font-size: 35rpx;
}
.body ._ul ._li .right .body {
  width: 100%;
  margin: 15rpx 0 0 60%;
  margin-bottom: 0;
}
.body ._ul ._li .right .foo {
  width: 100%;
  display: flex;
  margin-top: 30rpx;
  justify-content: space-between;
  z-index: 10;
}
.body ._ul ._li .right .foo text {
  font-size: 40rpx;
  color: red;
}
.footer {
  position: fixed;
  bottom: 110rpx;
  width: 100%;
  height: 100rpx;
  line-height: 90rpx;
  background-color: #fff;
  padding-left: 30rpx;
  z-index: 100 !important;
}
.footer .footer-left {
  float: left;
  width: 60%;
}
.footer .footer-left text {
  font-size: 40rpx;
  margin-left: 10rpx;
  font-weight: 600;
}
.footer .footer-right {
  float: left;
  font-size: 35rpx;
}
.footer .footer-right .money {
  color: red;
}
.foot {
  position: fixed;
  bottom: -1rpx;
  width: 100%;
  height: 120rpx;
  background-color: #fff;
  display: flex;
  justify-content: space-around;
  text-align: center;
  color: #fff;
  z-index: 100 !important;
}
.foot .left {
  width: 40%;
  height: 80rpx;
  border-radius: 50rpx;
  float: right;
  line-height: 80rpx;
  margin-top: 20rpx;
  background-color: #ccc;
}
.foot .right {
  width: 40%;
  height: 80rpx;
  border-radius: 50rpx;
  float: right;
  line-height: 80rpx;
  margin-top: 20rpx;
  background-color: red;
}

