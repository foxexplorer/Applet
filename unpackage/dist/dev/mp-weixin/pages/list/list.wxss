.content {
  padding-bottom: calc(var(-–window-bottom)+30rpx);
}
.box {
  width: 100%;
  height: 300rpx;
  background-color: #ffb5a6;
  border-bottom-left-radius: 30%;
  border-bottom-right-radius: 30%;
  padding: 10rpx;
  box-sizing: border-box;
}
.nav_box {
  display: flex;
  justify-content: space-between;
  width: 94%;
  height: 170rpx;
  margin: -220rpx auto;
  margin-bottom: 0;
  padding: 10rpx;
  box-sizing: border-box;
}
.n_left,
.n_right {
  width: 48%;
  height: 100%;
  font-size: 35rpx;
  /* background-color: #000; */
}
.n_left {
  text-align: center;
}
.n_left image {
  width: 60%;
  height: 100%;
}
.n_right {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  align-items: center;
  padding: 40rpx 0;
  box-sizing: border-box;
  color: #fff;
}
.switch_box {
  width: 94%;
  margin: 0 auto;
  margin-bottom: 40rpx;
}
.switch_box .box_title {
  display: flex;
  justify-content: space-between;
  width: 100%;
  height: 90rpx;
  background-color: #ccc;
}
.switch_box .box_title .min_box {
  width: 50%;
  height: 100%;
  background-color: #e1a093;
  text-align: center;
  line-height: 90rpx;
  color: #fff;
  font-size: 45rpx;
}
.switch_box .box_title .active {
  background-color: #f3ad9f;
}
.classify {
  width: 95%;
  height: 400rpx;
  margin: 0 auto;
}
.classify ._ul {
  margin: 0;
  padding: 0;
  list-style: none;
  font-size: 35rpx;
}
.classify .title {
  width: 20%;
  float: left;
  font-size: 40rpx;
  height: 350rpx;
}
.classify .title ._li {
  width: 100%;
  height: 33.3%;
}
.classify .body {
  width: 80%;
  float: left;
  height: 120rpx;
}
.classify .body ._li {
  float: left;
  margin-right: 25.5rpx;
  margin-bottom: 20rpx;
}
.classify .body ._li:hover {
  color: #f3ad9f;
}
.list_box {
  width: 100%;
  box-sizing: border-box;
  background-color: #fff;
}
.list_box .titbar {
  width: 95%;
  margin: 0 auto;
}
.list_box .titbar ._h2 {
  display: inline-block;
}
.list_box .titbar .more {
  float: right;
  color: #83a4ad;
}
.list_box .titbar .more image {
  width: 20rpx;
  height: 20rpx;
}
.list_box .list2 {
  width: 98%;
  margin: 0rpx auto;
  margin-bottom: 30rpx;
}
.list_box .list2 .footer {
  width: 100%;
  text-align: center;
}
.list_box .list2 .scroll-view-item {
  width: 100%;
}
.list_box .list2 .scroll-view-item ._ul {
  width: 100%;
  margin: 0;
  padding: 0;
}
.list_box .list2 .scroll-view-item ._ul ._li {
  float: left;
  padding-top: 40rpx;
  background-color: #fff;
  width: 47.5%;
  height: 500rpx;
  cursor: pointer;
  list-style: none;
  padding: 0 8rpx;
}
.list_box .list2 .scroll-view-item ._ul ._li .pic-box {
  width: 100%;
  height: 300rpx;
}
.list_box .list2 .scroll-view-item ._ul ._li .pic-box image {
  width: 100%;
  height: 100%;
  border-radius: 5%;
}
.list_box .list2 .scroll-view-item ._ul ._li .txt-box {
  padding: 10px 10px;
  width: 100%;
  font-size: 30rpx;
}
.list_box .list2 .scroll-view-item ._ul ._li .txt-box .left {
  width: 90%;
}
.list_box .list2 .scroll-view-item ._ul ._li .txt-box .left .span1 {
  width: 100%;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.list_box .list2 .scroll-view-item ._ul ._li .txt-box .left .left-p .span2 {
  color: #ccc;
  text-decoration: line-through;
  font-size: 25rpx;
}
.list_box .list2 .scroll-view-item ._ul ._li .txt-box .left .left-p .span3 {
  color: #cc0000;
  text-decoration: none;
}
.list_box .list2 .scroll-view-item ._ul ._li .txt-box .right {
  height: 75rpx;
  line-height: 75rpx;
  width: 50%;
}
.list_box .list2 .scroll-view-item ._ul ._li .txt-box .right .btn {
  padding: 5rpx 15rpx;
  background-color: #80c4ae;
  border-radius: 4px;
  line-height: 30px;
  color: #fff;
  margin-top: 10rpx;
  text-align: center;
  text-decoration: none;
}

