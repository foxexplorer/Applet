.content {
  width: 100%;
  padding-bottom: calc(var(-–window-bottom)+30rpx);
}
.head_box {
  width: 95%;
  height: 1000rpx;
  margin: 30rpx auto;
}
.head_box .alert {
  margin-top: 20rpx;
}
.head_box .head {
  margin: 0 auto;
  height: 670rpx;
  background-color: #fff;
}
.head_box .head image {
  width: 100%;
  height: 100%;
}
.head_box ._h3 {
  width: 100%;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  margin: 20rpx auto;
}
.head_box .money {
  height: 80rpx;
}
.head_box .money ._h2 {
  color: #ff0000;
  float: left;
}
.head_box .money .one {
  line-height: 70rpx;
  float: left;
  margin-left: 20rpx;
  color: #3cff94;
}
.head_box .money .two {
  line-height: 70rpx;
  float: right;
}
.body {
  width: 95%;
  margin: 0 auto;
}
.body image {
  width: 100%;
  height: 700rpx;
}
.foot {
  position: fixed;
  bottom: 0;
  width: 100%;
  height: 120rpx;
  background-color: #fff;
  display: flex;
  justify-content: space-between;
  text-align: center;
  color: #fff;
}
.foot .left {
  width: 30%;
  height: 80rpx;
  border-radius: 50rpx;
  line-height: 80rpx;
  margin-top: 20rpx;
  margin-left: 20rpx;
  background-color: #1aff66;
}
.foot .right {
  width: 60%;
  height: 80rpx;
  border-radius: 50rpx;
  line-height: 80rpx;
  margin-top: 20rpx;
  background-color: #ff557f;
  margin-right: 20rpx;
}
.foot .right .right_right {
  height: 100%;
  width: 50%;
  float: left;
  border-top-right-radius: 50rpx;
  border-bottom-right-radius: 50rpx;
  background-color: #ff2a2a;
}
.foot .right .right_middle {
  float: left;
  width: 50%;
  height: 100%;
  border-top-left-radius: 50rpx;
  border-bottom-left-radius: 50rpx;
  background-color: #f5b81c;
}
.u-page {
  padding: 0;
}
.u-cell-icon {
  width: 36rpx;
  height: 36rpx;
  margin-right: 8rpx;
}
.u-cell-group__title__text {
  font-weight: bold;
}
.show2 {
  height: 1000rpx;
}

