.content {
  margin: 0;
  padding: 0;
  background-color: #ECF0F2;
  height: 100%;
}
.content .active {
  background-color: #f3ad9f;
}
.content .box {
  margin: 0;
  padding: 0;
  list-style: none;
  width: 95%;
  margin: 0 auto;
}
.content .box ._li {
  width: 100%;
  height: 480rpx;
  box-sizing: border-box;
  padding: 30rpx;
  padding-top: 70rpx;
  background-color: #fff;
  border-radius: 40rpx;
  margin: 20rpx 0 30rpx 0;
}
.content .box ._li .up {
  width: 100%;
  display: flex;
  justify-content: space-between;
}
.content .box ._li .up .left {
  width: 33%;
  height: 250rpx;
}
.content .box ._li .up .left image {
  width: 100%;
  height: 100%;
}
.content .box ._li .up .right {
  position: relative;
  width: 60%;
  height: 250rpx;
}
.content .box ._li .up .right .title {
  width: 100%;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.content .box ._li .up .right .small_title {
  margin-top: 10rpx;
  display: flex;
  color: #999;
  justify-content: space-between;
}
.content .box ._li .up .right .bottom {
  position: absolute;
  bottom: 0;
}
.content .box ._li .up .right .bottom .span1 {
  color: #999;
  margin-right: 5rpx;
}
.content .box ._li .down {
  width: 100%;
  height: 140rpx;
  position: relative;
}
.content .box ._li .down ._ul {
  margin: 0;
  padding: 0;
  width: 100%;
  display: flex;
  justify-content: space-between;
  list-style: none;
  position: absolute;
  bottom: 0;
}
.content .box ._li .down ._ul ._li {
  padding-top: 0;
  width: 25%;
  height: 70rpx;
  text-align: center;
  line-height: 70rpx;
  box-sizing: border-box;
  font-size: 20rpx;
}
.content .box ._li .down ._ul .one {
  text-align: left;
  width: 18%;
  color: #999;
}
.content .box ._li .down ._ul .two {
  border: 1rpx solid #ccc;
}
.content .box ._li .down ._ul .three {
  border: 1rpx solid #ccc;
}
.content .box ._li .down ._ul .four {
  border: 1rpx solid #ff9122;
  color: #ff9122;
}

